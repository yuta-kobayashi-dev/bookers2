<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>User info</h1>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this book from being saved:
    　<ul>
    　  <% @user.errors.full_messages.each do |message| %>
    　    <li><%= message %></li>
    　  <% end %>
    　</ul>
    <% end %>

    <%= form_with model: @user do |f| %>
    <div class="field">
      <label for="inputName">Name</label></br>
      <%= f.text_field :name, autofocus: true, id:"inputName" %>
    </div>
    <div class="field">
      <label for="inputImage">Image</label></br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class="field">
      <label for="inputIntroduction">Introduction</label></br>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
    </div>
    
    <div class="field">
      <%= f.submit "Update User", class:"btn btn-secondary" %>
    </div>
    <% end %>
    </div>
  </div>
</div>