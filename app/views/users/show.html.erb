<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user, book:@book_new %>
    <div class="col-md-8 offset-md-1">
      <h2> Books </h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan ="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td/>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
            </td>
            <td><%= book.title %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>